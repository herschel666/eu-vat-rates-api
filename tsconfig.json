{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2018",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importsNotUsedAsValues": "error",
    "inlineSources": true,
    "pretty": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true
  },
  "files": ["./build.ts"]
}
